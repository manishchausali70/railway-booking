# Copy this file to .env and edit values for your environment
# MongoDB connection (required)
# Use your local instance or Atlas connection string
MONGODB_URI=mongodb://127.0.0.1:27017/railway_booking

# App / Auth
PORT=3000
FRONTEND_ORIGIN=http://localhost:5173
ACCESS_SECRET=replace_with_a_strong_access_secret
REFRESH_SECRET=replace_with_a_strong_refresh_secret
ACCESS_TTL=15m
REFRESH_TTL_MS=604800000

# Optional: set to true to enable secure cookies (only on HTTPS)
SECURE_COOKIES=false
